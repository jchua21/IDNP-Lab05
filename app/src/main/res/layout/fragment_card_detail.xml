<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CardDetailFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#098FFB"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginEnd="20dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/card_detail_img"
                    android:layout_width="@dimen/image_width"
                    tools:src="@drawable/claustro"
                    android:layout_height="@dimen/image_height"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/circular_image" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catedral de Arequipa"
                    android:textColor="#F6BD13"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/carad_detail_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="La Catedral de Arequipa, también conocida como la Catedral de Santa María la Mayor, es una de las estructuras más emblemáticas de la ciudad. Situada en la Plaza de Armas, esta majestuosa catedral se caracteriza por su impresionante arquitectura neoclásica, que combina elementos del estilo barroco y renacentista. "
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="11sp">

                </TextView>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>